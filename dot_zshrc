# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

fpath=(~/zsh-completions/src ~/zsh-completions-custom $fpath)

autoload -Uz compinit && compinit

# Keybindings
bindkey "^[[1;5C" forward-word # ctrl + right arrow
bindkey "^[[1;5D" backward-word # ctrl + left arrow

# Enable auto-correction
ENABLE_CORRECTION="true"

# Add ~/.local/bin to PATH
export PATH="$HOME/.local/bin:$PATH"

# Set editor
export EDITOR="nvim"

# Enable Zoxide
eval "$(zoxide init --cmd j zsh)"

# Work-related stuff
source ~/dev/work/.workrc 2> /dev/null # Dump the error if not found

# Docker shortcuts
alias dc='docker compose'
alias dcr='docker compose rm'
alias dcu='docker compose up'
alias dcs='docker compose stop'
alias dcb='docker compose build'

# Gcloud shortcuts
alias cl=gcloud
alias co='gcloud compute'
alias cssh='gcloud compute ssh'
alias gu=gsutil

# Useful aliases
alias vi="nvim"
alias vim="nvim"
alias vil="nvim ."
alias xx="exit"
alias bashme="vi ~/.zshrc"
alias sourceme="source ~/.zshrc"
alias l="ls -lah"
alias cat="bat"
alias grep="rg -i"
alias lg="lazygit"

# Git aliases
alias update="git status"
alias branch="git branch"
alias swap="git checkout"
alias commit="git commit -m"
alias raise="git push -u origin"
alias gdiff="git diff"

# fnm
export PATH="/home/scallaway/.local/share/fnm:$PATH"
eval "`fnm env`"

source /home/scallaway/zsh-plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source /home/scallaway/zsh-plugins/git/git.plugin.zsh
source ~/powerlevel10k/powerlevel10k.zsh-theme

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# pnpm
export PNPM_HOME="/home/scallaway/.local/share/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end

# Add Go to PATH
export PATH=$PATH:/usr/local/go/bin

# fnm
export PATH="/home/scallaway/.local/share/fnm:$PATH"
eval "`fnm env`"

# bun completions
[ -s "/home/scallaway/.bun/_bun" ] && source "/home/scallaway/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"
